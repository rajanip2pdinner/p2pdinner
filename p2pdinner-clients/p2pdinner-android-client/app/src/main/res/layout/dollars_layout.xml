<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/dollars_layout">

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/initial_dollar_amt"
        android:id="@+id/dollar_amt" />


    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dollar_label" />


    <ImageView
        android:id="@+id/increment_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/abc_btn_check_to_on_mtrl_015" />

    <ImageView
        android:id="@+id/decrement_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/abc_btn_check_material" />

</RelativeLayout>