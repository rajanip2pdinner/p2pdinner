extends layout

block content
	link(rel="stylesheet", href="/bower_components/jquery-bar-rating/dist/themes/fontawesome-stars.css")
	div(class="container")
		div(class="row")
			div(class='bootcards-list')
				div(class="panel panel-primary")
					div(class="panel-heading")
						h3(class="panel-title") Received orders
					div(class="table-responsive")
						table(class="table table-hover")
							thead
								tr(class="active")
									th Title
									th Conf#
									th Cost/Item
									th Order Qty
									th Total Price
									th Buyer Rating

							tbody
								each item in data.results							
									tr
										td=item.title
										td=item.pass_code
										td=item.cost_per_item
										td=item.order_quantity
										td=item.total_price
										td
											select(class='buyer-rating')
												option(value="1") 1
												option(value="2") 2
												option(value="3") 3													
												option(value="4") 4
												option(value="5") 5																																																
					div(class="panel-footer")
						a(href="/profiles/signout", class="pull-right" style="margin-left:1em")
							i(class="fa fa-2x fa-sign-out")
						a(href="/cart/view", class="pull-right" style="margin-left:1em")
							i(class="fa fa-2x fa-cart-arrow-down")
						a(href="/profiles/validate", class="pull-right")
							i(class="fa fa-2x fa-home")
					div(class="clearfix")
	script(src="/javascripts/receivedOrdersDetail.js")					
	script(src="/bower_components/jquery-bar-rating/dist/jquery.barrating.min.js")
	