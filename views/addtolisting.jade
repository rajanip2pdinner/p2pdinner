extends layout

block content
	div(class="panel panel-primary")
		div(class="panel-heading clearfix")
			h3(class="panel-title pull-left") Add Item to Dinner Listing
		div(class="modal-body")
			form(role="form",  method="post", action="/listings/add")
				
				div(class="form-group")
					label(class="col-xs-3 control-label") Available Quantity
					input(class="form-control",id="available_quantity", name="available_quantity", placeholder="Available Quantity")
				div(class="form-group")
					label(class="col-xs-3 control-label") Cost Per Item
					input(class="form-control",id="cost_per_item", name="cost_per_item", placeholder="Cost per Item")
				div(class="form-group")
					label(class="col-xs-3 control-label") Start Time (MM/DD/YY HH24:MI:SS)
					input(class="form-control",id="start_time", name="start_time", placeholder="Start Time")
				div(class="form-group")
					label(class="col-xs-3 control-label") End Time (MM/DD/YY HH24:MI:SS)
					input(class="form-control",id="end_time", name="end_time", placeholder="End Time")
				div(class="form-group")
					label(class="col-xs-3 control-label") Close Time (MM/DD/YY HH24:MI:SS)
					input(class="form-control",id="close_time", name="close_time", placeholder="Close Time")
				input(type="hidden", id="menu_item_id", name="menu_item_id", value="#{menuItemId}")
				div(class="form-group")
					label(class="col-xs-3 control-label") Address Line1
					input(class="form-control",id="address_line1", name="address_line1", placeholder="Address Line 1")
				div(class="form-group")
					label(class="col-xs-3 control-label") Address Line2
					input(class="form-control",id="address_line2", name="address_line2", placeholder="Address Line 2")
				div(class="form-group")
					label(class="col-xs-3 control-label") City
					input(class="form-control",id="city", name="city", placeholder="City")
				div(class="form-group")
					label(class="col-xs-3 control-label") State
					select(class="form-control",id="states", name="states", placeholder="State")
						option
				div(class="btn-group pull-right")
				button(class="btn btn-success", type="submit") Add To List
	script(src="/javascripts/addtolisting.js")