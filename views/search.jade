extends layout

block content
	div(class="panel panel-default")
		div(class="panel-heading")
			h3(class="panel-title") Dinner Listing
		div(class="panel-body" )
			a(class="btn btn-primary pull-right", data-toggle="collapse", href="#filters", aria-expanded="false", aria-controls="filters") Filters Results
			div(class="collapse", id="filters")
				form(id="frm_search")
					div(class="well")
						div(class="form-group")
							label(for="Title") Title
							input(class="form-control", id="title", placeholder="title")
						div(class="form-group")
							label(for="Description") Description
							input(class="form-control", id="description", placeholder="description")
						div(class="form-group")
							label(for="Min Price") Price Range (Min)
							input(class="form-control", id="min_price", placeholder="Min Price")
						div(class="form-group")
							label(for="Max Price") Price Range (Max)
							input(class="form-control", id="min_price", placeholder="Max Price")
						div(class="form-group")
							label(for="Category") Category
							select(class="form-control", id="categories")
						div(class="form-group")
							label(for="Delivery") Delivery
							select(class="form-control", id="delivery")
						div(class="form-group")
							label(for="Delivery") Special Needs
							select(class="form-control", id="special_needs")
						button(type="submit", class="btn btn-default") Search 
			div(id = 'map-canvas')
	script(src="/javascripts/search.js")